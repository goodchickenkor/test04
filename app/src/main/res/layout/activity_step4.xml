<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:text="어떤 여행을"
        android:textColor="#99CCFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gmarketsansttfmedium"
        android:text="떠나시나요?"
        android:textColor="#000000"
        android:textSize="32sp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1" >

        <!-- 버튼 리니어 레이아웃 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 첫번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp">

                <!-- 캠핑 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/campingBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/camping_btn" />

                <!-- 수영 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/swimmingBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/swimming_btn" />

                <!-- 글램핑 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/glampingBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/glamping_btn" />
            </LinearLayout>
            <!-- 두번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp">

                <!-- 등산 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mountainBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/mountain_btn" />

                <!-- 스키 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/skiBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/ski_btn" />

                <!-- 낚시 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fishingBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/fishing_btn" />
            </LinearLayout>
            <!-- 세번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp">

                <!-- 골프 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/golfBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/golf_btn" />

                <!-- 공연 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/concertBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/concert_btn" />

                <!-- 사진 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/camera_btn" />
            </LinearLayout>
            <!-- 네번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp">

                <!-- 트래킹 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/trekkingBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/trekking_btn" />

                <!-- 계곡 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/waterfallBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/waterfall_btn" />

                <!-- 온천 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/spaBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/spa_btn" />
            </LinearLayout>
            <!-- 다섯번째 줄 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp">

                <!-- 술 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/alcoholBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/alcohol_btn" />

                <!-- 헬스 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fitnessBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/fitness_btn" />

                <!-- 업무 버튼 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/businessBtn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/business_btn" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 하단 버튼 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skipBtn_step4"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/skip_btn"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:text="건너뛰기" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextBtn_step4"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/next_btn"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:text="확 인"  />

    </LinearLayout>
</LinearLayout>
